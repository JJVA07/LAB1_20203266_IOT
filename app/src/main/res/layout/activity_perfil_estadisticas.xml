<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Barra superior unificada -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#444444"
        android:padding="12dp"
        android:elevation="4dp">

        <!-- Flecha retroceder -->
        <ImageButton
            android:id="@+id/btnVolver"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Volver"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            android:layout_marginEnd="16dp" />

        <!-- Texto centrado -->
        <TextView
            android:id="@+id/tvNombreApp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TeleQuiz"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <!-- BotÃ³n perfil -->
        <ImageButton
            android:id="@+id/btnPerfil"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_person"
            android:contentDescription="Perfil"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Contenido scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- InformaciÃ³n del jugador -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="20dp"
                android:elevation="4dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¤ INFORMACIÃ“N DEL JUGADOR"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvNombreJugador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jugador: Usuario"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvFechaInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de inicio: --/--/----"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvPartidasJugadas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partidas jugadas: 0"
                    android:textSize="16sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- Historial de partidas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="20dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/tvTituloHistorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ˆ HISTORIAL DE PARTIDAS"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:id="@+id/layoutHistorial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- AquÃ­ se insertan dinÃ¡micamente las partidas -->
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
