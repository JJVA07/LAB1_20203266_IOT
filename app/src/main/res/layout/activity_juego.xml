<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Barra superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#444444"
        android:elevation="4dp"
        android:padding="12dp">

        <!-- Flecha retroceder -->
        <ImageButton
            android:id="@+id/btnVolver"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Volver"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            android:layout_marginEnd="16dp" />

        <!-- Texto centrado -->
        <TextView
            android:id="@+id/tvNombreApp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TeleQuiz"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <!-- Icono perfil -->
        <ImageButton
            android:id="@+id/btnPerfil"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_person"
            android:contentDescription="Perfil"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Info puntaje -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tvNumeroPregunta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pregunta 1 de 7"
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/tvPuntaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puntaje: 0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2196F3" />
    </LinearLayout>

    <!-- Pregunta + opciones -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvPregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Cuál es la pregunta?"
                android:textSize="18sp"
                android:textColor="#333333"
                android:background="@android:color/white"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btnPistas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="❓ Pistas (3)"
                android:textSize="14sp"
                android:backgroundTint="#777777"
                android:textColor="@android:color/white"
                android:layout_gravity="end"
                android:layout_marginBottom="16dp" />

            <!-- Opciones -->
            <Button
                android:id="@+id/btnOpcion1"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="A) Opción 1"
                android:backgroundTint="#E0E0E0"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnOpcion2"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="B) Opción 2"
                android:backgroundTint="#E0E0E0"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnOpcion3"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="C) Opción 3"
                android:backgroundTint="#E0E0E0"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnOpcion4"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="D) Opción 4"
                android:backgroundTint="#E0E0E0"
                android:textColor="#333333"
                android:layout_marginBottom="24dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Navegación inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <Button
            android:id="@+id/btnAnterior"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="← Anterior"
            android:backgroundTint="#777777"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Siguiente →"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
